<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical">


        <TextView
            android:id="@+id/btExpressao"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:ellipsize="start"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/numButton"
            android:textSize="50sp" />


        <TextView
            android:id="@+id/btResultado"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:ellipsize="start"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/numButton"
            android:textSize="60sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btLimpar"
                    style="@style/ActionButtonStyle"
                    android:text="C" />

                <TextView
                    android:id="@+id/btSeparador"
                    style="@style/ActionButtonStyle"
                    android:text="()" />


                <TextView
                    android:id="@+id/btPercentual"
                    style="@style/ActionButtonStyle"
                    android:text="%" />

                <TextView
                    android:id="@+id/btDivisao"
                    style="@style/ActionButtonStyle"
                    android:text="รท" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/bt_07"
                    style="@style/NumberButtonStyle"
                    android:text="7" />

                <TextView
                    android:id="@+id/bt_08"
                    style="@style/NumberButtonStyle"
                    android:text="8" />

                <TextView
                    android:id="@+id/bt_09"
                    style="@style/NumberButtonStyle"
                    android:text="9" />

                <TextView
                    android:id="@+id/btMultiplicacao"
                    style="@style/ActionButtonStyle"
                    android:text="X" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_04"
                    style="@style/NumberButtonStyle"
                    android:text="4" />

                <TextView
                    android:id="@+id/bt_05"
                    style="@style/NumberButtonStyle"
                    android:text="5" />

                <TextView
                    android:id="@+id/bt_06"
                    style="@style/NumberButtonStyle"
                    android:text="6" />

                <TextView
                    android:id="@+id/btMenos"
                    style="@style/ActionButtonStyle"
                    android:text="-" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_01"
                    style="@style/NumberButtonStyle"
                    android:text="1" />

                <TextView
                    android:id="@+id/bt_02"
                    style="@style/NumberButtonStyle"
                    android:text="2" />

                <TextView
                    android:id="@+id/bt_03"
                    style="@style/NumberButtonStyle"
                    android:text="3" />

                <TextView
                    android:id="@+id/btMais"
                    style="@style/ActionButtonStyle"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_0"
                    style="@style/NumberButtonStyle"
                    android:text="0" />

                <TextView
                    android:id="@+id/btPonto"
                    style="@style/NumberButtonStyle"
                    android:text="." />

                <ImageView
                    android:id="@+id/btApagar"
                    style="@style/NumberButtonStyle"
                    android:scaleType="center"
                    android:src="@drawable/backspace" />

                <TextView
                    android:id="@+id/btIgual"
                    style="@style/ActionButtonStyle"
                    android:text="=" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>